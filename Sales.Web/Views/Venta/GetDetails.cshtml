@model IEnumerable<Sales.Web.Models.VentaDetalleResponse>

@{
    ViewData["Title"] = "GetDetails";
}


<h4 class="alert text-danger">@ViewBag.Message</h4>
<h1>Detalle de venta</h1>

<p>
    <a asp-action="index">Atras</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@if(Model != null)
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idVenta)
            </td>

        </tr>
}
    </tbody>
</table>
